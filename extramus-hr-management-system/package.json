{
  "name": "extramus-document-management",
  "version": "1.0.0",
  "description": "Document Management System for Extramus HR Management",
  "main": "index.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently \"yarn backend:dev\" \"yarn frontend:dev\"",
    "backend:dev": "cd backend && yarn dev",
    "frontend:dev": "cd frontend && yarn dev",
    "backend:install": "cd backend && yarn install",
    "frontend:install": "cd frontend && yarn install",
    "install-all": "yarn backend:install && yarn frontend:install",
    "build": "cd backend && yarn build && cd ../frontend && yarn build",
    "start": "cd backend && yarn start",
    "db:generate": "cd backend && yarn prisma generate",
    "db:push": "cd backend && yarn prisma db push",
    "db:migrate": "cd backend && yarn prisma migrate dev",
    "db:studio": "cd backend && yarn prisma studio"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
